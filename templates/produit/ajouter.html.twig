{% extends 'base.html.twig' %}
{% block title %}
    Ajouter un produit
{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    Ajouter un produit
                </h3>
                <button onclick="window.history.back();" class="btn btn-light btn-sm">
                    Retour
                </button>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}
                <div class="form-group">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control' }}
                    ) }}
                    {% for error in form.titre.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                    <div class="invalid-feedback">
                        Veuillez entrer le titre du produit.
                    </div>
                </div>
                <div class="form-group mt-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control' }}
                    ) }}
                    <div class="invalid-feedback">
                        Veuillez entrer une description du produit.
                    </div>
                    {% for error in form.description.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                </div>
                <div class="form-group mt-3">
                    {{ form_label(form.prixTtc) }}
                    {{ form_widget(form.prixTtc, {'attr': {'class': 'form-control' }}
                    ) }}
                    <div class="invalid-feedback">
                        Veuillez entrer le prix TTC du produit.
                    </div>
                    {% for error in form.prixTtc.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                </div>
                <div class="form-group mt-3">
                    {{ form_label(form.quantiteStock) }}
                    {{ form_widget(form.quantiteStock, {'attr': {'class': 'form-control' }}
                    ) }}
                    <div class="invalid-feedback">
                        Veuillez entrer la quantit√© en stock.
                    </div>
                    {% for error in form.quantiteStock.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                </div>
                <div class="form-group mt-3">
                    {{ form_label(form.types) }}
                    {{ form_widget(form.types, {'attr': {'class': 'form-control' }}
                    ) }}
                    <div class="invalid-feedback">
                        Veuillez entrer les types.
                    </div>
                    {% for error in form.types.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                </div>
                <div class="form-group mt-3">
                    {{ form_label(form.genre) }}
                    {{ form_widget(form.genre, {'attr': {'class': 'form-control' }}
                    ) }}
                    <div class="invalid-feedback">
                        Veuillez entrer genre.
                    </div>
                    {% for error in form.genre.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                </div>
                <div class="form-group mt-3">
                    {{ form_label(form.marque) }}
                    {{ form_widget(form.marque, {'attr': {'class': 'form-control' }}
                    ) }}
                    <div class="invalid-feedback">
                        Veuillez entrer la marque.
                    </div>
                    {% for error in form.marque.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                </div>
                <button type="submit" class="btn btn-success mt-4">
                    Enregistrer
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
