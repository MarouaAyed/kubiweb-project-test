{% extends 'base.html.twig' %}
{% block title %}
    Créer un Fournisseur
{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    Créer un Fournisseur
                </h3>
                <button onclick="window.history.back();" class="btn btn-light btn-sm">
                    Retour
                </button>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate' }}
                ) }}
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                    {% for error in form.nom.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                    <div class="invalid-feedback">
                        Veuillez entrer le nom du fournisseur.
                    </div>
                </div>
                <div class="form-group mt-3">
                    {{ form_label(form.marque) }}
                    {{ form_widget(form.marque) }}
                    <div class="invalid-feedback">
                        Veuillez sélectionner une marque associée.
                    </div>
                    {% for error in form.marque.vars.errors %}
                        <div class="text-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                </div>
                <button type="submit" class="btn btn-success mt-4">
                    Enregistrer
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
